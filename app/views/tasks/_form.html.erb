<div class="container mt-1" >
  <div class="d-flex border mt-3 mb-3">
  <%= simple_form_for (@task) do |f| %>
    <%= f.association :category,
      as: :radio_buttons,
      collection_wrapper_tag: 'div',
      collection_wrapper_class: 'category-wrapper',
      item_wrapper_class: 'category-item',
      input_html: {class: 'category-selector'}
      %>
  </div>


    <div class="d-flex border" >
      <div class= "col-6">
        <h1>When</h1>
        <div class="d-flex">
          <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker", style: "display: none;"}, style: "display: none;" %>
        </div>
      </div>
      <div class= "col-6" >
        <h1>Task details</h1>
        <div class="d-flex row">
          <div class="col-12">
            <%= f.input :description, input_html: {style: "height: 250px;" } %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 border mt-3">
      <%= f.input :address %>
    </div>
    <div class="d-flex justify-content-center mt-3 mb-3 ">
      <%= f.submit "Create Task", class: "btn btn-new-primary" %>
  <% end %>
    </div>
</div>






