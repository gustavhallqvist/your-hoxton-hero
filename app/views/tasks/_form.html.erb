<div class="container mt-1">
<%= simple_form_for (@task) do |f| %>
  <%= f.association :category,
    as: :radio_buttons,
    collection_wrapper_tag: 'div',
    collection_wrapper_class: 'category-wrapper',
    item_wrapper_class: 'category-item',
    input_html: {class: 'category-selector'}
    %>
    <h1>When</h1>
  <div class="d-flex justify-content-center">
  <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker", style: "display: none;"}, style: "display: none;" %>

</div>
    <h1>Task details</h1>
  <div class="d-flex row">
    <div class="col-6">
   <%= f.input :description %>
    </div>
    <div class="col-6">
   <%= f.input :address %>
   </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= f.submit "Create Task", class: "btn btn-new-primary" %>
  </div>
<% end %>

</div>





