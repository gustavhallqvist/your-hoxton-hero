<div class="container p-0" style="position:relative; top:30px;">
  <h1>Become a HERO</h1>
  <%= form_tag tasks_path, method: :get do %>
    <div class="d-flex">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Enter your postcode"
      %>
      <%= submit_tag "Search", class: "btn-red" %>
    </div>
  <% end %>

  <div class="row d-flex justify-content-center">
    <div class="col">
      <% @tasks.each do |task|  %>
        <div class="card-booking my-2">
          <div class="d-flex card-inner justify-content-between">
            <div class="card-booking-infos" >
              <h2><%= link_to task.category.name, task_path(task) %></h2>
              <p><b>What:</b> <%= task.description %></p>
              <p><b>Where:</b> <%= task.address %><b></p>
              <p>When:</b> <%= task.date.strftime('%Y-%M-%D') %></p>
            </div>
            <!-- insert user avatar -->
          </div>
        </div>
      <% end %>
    </div>
    <div class="col my-2" id="map" style="width: 100%; height: 100vh;"data-markers="<%= @markers.to_json %>"data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
