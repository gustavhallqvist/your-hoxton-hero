<div class="container" style="position:relative; top:70px;">

  <div class="container m-3 search-bar">
    <h1>1. Pop In your postcode</h1>
    <%= form_tag tasks_path, method: :get do %>
      <div class="d-flex">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Whats your postcode"
        %>
        <%= submit_tag "Search", class: "btn btn-new-primary" %>
      </div>
    <% end %>
  </div>
  <div class="container m-3 search-bar">
    <h1>1. Pop In your postcode</h1>
    <%= form_tag tasks_path, method: :get do %>
      <div class="d-flex">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Whats your postcode"
        %>
        <%= submit_tag "Search", class: "btn btn-new-primary" %>
      </div>
    <% end %>
  </div>


  <h1>Available Tasks</h1>

  <% @tasks.each do |task|  %>
  <div class="card-booking my-5">
      <div class="d-flex card-inner">
        <div class="card-booking-infos" >
          <h2><%= link_to task.category.name, task_path(task) %></h2>
          <p> Your Booking Date: <%= task.date.strftime("%Y-%M-%D") %></p>
          <p> <%= task.description %></p>
        </div>
      </div>
    </div>

  <% end %>



